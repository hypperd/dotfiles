# Sway config
# Read `man 5 sway` for a complete reference.
include /etc/sway/config.d/*

# Disable mouse focus
focus_follows_mouse no

# Set sway font
font pango: JetBrains Mono Nerd Font 10

### Variables

# Mod key.
set $mod Mod4

# Terminal emulator
set $term kitty

# sway scripts
set $scripts ~/.config/sway/scripts/

# Rofi scripts
set $rofi ~/.config/rofi/scripts/

# Application launcher
set $menu $rofi/launcher.sh

### Output configuration

output LVDS-1 {
	scale 1
}

exec_always 'pkill kanshi; exec kanshi'

# Wallpaper
exec ~/.azotebg

### Window borders

default_border pixel 2
default_floating_border pixel 2

## Shadows

#border_images.focused ~/.config/sway/shadows.png
#border_images.focused_inactive ~/.config/sway/shadows.png
#border_images.unfocused ~/.config/sway/shadows.png
#border_images.urgent ~/.config/sway/shadows.png

### Gaps

gaps inner 6
gaps outer 2

### Idle configuration

exec swayidle -w \
	    timeout 360 'swaylock' \
        timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
        timeout 840 'systemctl suspend && playerctl stop' \
        before-sleep 'swaylock' \
        after-resume 'swaymsg "output * dpms on"' \
        lock 'swaylock'

# idle inhibit with audio playing or capturing
exec 'pkill sway-audio-idle; exec sway-audio-idle-inhibit'

### Input configuration

input {
	"type:touchpad" {
        dwt enabled
        tap enabled
	    natural_scroll enabled
    	middle_emulation enabled
        scroll_method two_finger
    }
    "type:keyboard" {
        xkb_layout br
        xkb_variant abnt2
    }
    "1:1:AT_Translated_Set_2_keyboard" {
        xkb_model thinkpad60
        xkb_layout br
        xkb_variant abnt2
    }
}

### Key bindings

# Basics:

    # Start a terminal
    bindsym $mod+Return exec $term

    # Kill focused window
    bindsym $mod+Shift+q kill

    # Start your launcher
    bindsym $mod+d exec $menu

	# Resize and move mode:
    floating_modifier $mod normal

    # Reload the configuration file
    bindsym $mod+Shift+c reload

    # Exit sway (logs you out of your Wayland session)
    #bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'
    bindsym $mod+Shift+e exec $rofi/powermenu.sh

# Moving around:
    
    # Move your focus around
    bindsym $mod+Left focus left
    bindsym $mod+Down focus down
    bindsym $mod+Up focus up
    bindsym $mod+Right focus right

    # Move the focused window with the same, but add Shift
    bindsym $mod+Shift+Left move left
    bindsym $mod+Shift+Down move down
    bindsym $mod+Shift+Up move up
    bindsym $mod+Shift+Right move right

# Workspaces:

    # Switch to workspace
    bindsym $mod+1 workspace number 1
    bindsym $mod+2 workspace number 2
    bindsym $mod+3 workspace number 3
    bindsym $mod+4 workspace number 4
    bindsym $mod+5 workspace number 5
    bindsym $mod+6 workspace number 6
    bindsym $mod+7 workspace number 7
    bindsym $mod+8 workspace number 8
    bindsym $mod+9 workspace number 9
    bindsym $mod+0 workspace number 10

	# Move focused container to workspace
    bindsym $mod+Shift+1 move container to workspace number 1
	bindsym $mod+Shift+2 move container to workspace number 2
	bindsym $mod+Shift+3 move container to workspace number 3
	bindsym $mod+Shift+4 move container to workspace number 4
	bindsym $mod+Shift+5 move container to workspace number 5
	bindsym $mod+Shift+6 move container to workspace number 6
    bindsym $mod+Shift+7 move container to workspace number 7
    bindsym $mod+Shift+8 move container to workspace number 8
    bindsym $mod+Shift+9 move container to workspace number 9
    bindsym $mod+Shift+0 move container to workspace number 10
    
    # Switch to workspace with arrow keys
    bindsym $mod+Control+Right workspace next
    bindsym $mod+Control+Left workspace prev

	#Move workspace to another monitor
    bindsym $mod+Control+Shift+Right move workspace to output right
    bindsym $mod+Control+Shift+Left move workspace to output left

# Layout stuff:

    # split
    bindsym $mod+b splith
    bindsym $mod+v splitv

    # Switch the current container between different layout styles
	# bindsym $mod+s layout stacking
    # bindsym $mod+w layout tabbed
    # bindsym $mod+e layout toggle split
    bindsym $mod+Shift+semicolon layout toggle split tabbed stacking

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # Move focus to the parent container
    bindsym $mod+a focus parent

# Scratchpad:
    
	# Move the currently focused window to the scratchpad
	bindsym $mod+Shift+minus move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
	#bindsym $mod+minus scratchpad show
    bindsym Alt+Tab scratchpad show

# Resizing containers:

mode "Resize" {

    # left will shrink the containers width
    bindsym Left resize shrink width 10px
    # right will grow the containers width
    bindsym Down resize grow height 10px
    # up will shrink the containers height
    bindsym Up resize shrink height 10px
    # down will grow the containers height
    bindsym Right resize grow width 10px
    
    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Use Resize mode
bindsym $mod+r mode "Resize"

# XF86 keys:

    # Volume control
    bindsym --locked XF86AudioRaiseVolume exec pamixer -i 2
    bindsym --locked XF86AudioLowerVolume exec pamixer -d 2
    bindsym --locked XF86AudioMute exec pamixer -t
    bindsym --locked XF86AudioMicMute exec pamixer --default-source -t
    
    # Player control
    bindsym --locked XF86AudioPlay exec playerctl --player=spotify play-pause
    bindsym --locked XF86AudioPause exec playerctl --player=spotify play-pause
    bindsym --locked XF86AudioNext exec playerctl --player=spotify next
    bindsym --locked XF86AudioPrev exec playerctl --player=spotify previous

    # Brightness control
    bindsym --locked XF86MonBrightnessUp exec brightnessctl set +5% 
    bindsym --locked XF86MonBrightnessDown exec brightnessctl set 5%-

    # Custom player control (Laptop keyboard)
    bindsym --locked XF86Explorer exec playerctl --player=spotify next
    bindsym --locked XF86LaunchA exec playerctl --player=spotify play-pause
    bindsym --locked XF86Search exec playerctl --player=spotify previous
    bindsym --locked XF86Tools exec playerctl stop

    # Dpms toggle laptop screen
    bindsym XF86Display output LVDS-1 dpms toggle

# Screenshot

    bindsym --no-repeat Print exec $scripts/grimshot --notify copy-save output
    bindsym --no-repeat $mod+Shift+s exec  $scripts/grimshot --notify copy area
    bindsym --no-repeat $mod+Shift+w exec  $scripts/grimshot --notify copy window

# Misc:

    bindsym $mod+l exec loginctl lock-session
    bindsym $mod+period exec rofi -show emoji 
    bindsym $mod+n exec nemo
    bindsym $mod+g exec $rofi/recorder.sh
    
